<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{url_for('static', filename = 'style.css')}}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Paw and Order</title>
</head>
<body>

    <nav>    <div class="title">
        <h1><i class="fa fa-paw"></i></i>Paw and Order<i class="fa fa-gavel"></i></h1>
    </div>
    <div class="links">
        <a href="/">Home</a>
        ~
        <a href="customers">Customers</a>
        ~
        <a href="dogs">Dogs</a>
        ~
        <a href="employees">Employees</a>
        ~
        <a href="commandsLearned">Commands Learned By Dog</a>
        ~
        <a href="commands">Commands</a>
        ~
        <a href="trainingSessions">TrainingSessions</a>
    </div>
    </nav>
    <h1>Paw and Order Commands Learned by Dog</h1>

    <table>
      {% if data %}
        <tr>
        <th>CommandByDogID</th>
          <th>Command Name</th>
          <th>Dog's Name</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
        <tr>
        <tr>{{data}}</tr>
          {% for item in data %}


          <tr>
            <!-- Then iterate through every key in the current item dictionary -->
                        {% for key in item.keys() %}

            <!-- Create a <td> element with the value of that key in it -->
                        {% if key == "CommandsLearnedByDog" %}
            <td> {{[item[key]][0]}} </td>
            {% endif %}
            {% if key == "commandID" %}
            <td> {{commandData[item[key]]["commandName"]}} </td>
            {% endif %}
                        {% if key == "dogID" %}
            <td> {{dogData[item[key]]["dogName"]}} </td>
            {% endif %}

                        {% endfor %}

                        <!-- Edit/delete buttons -->
            <td><a href="editCommandLearned/{{item.commandsLearnedByDog}}" class="btn btn-default"><i class="fa fa-paw"></i></a></td>
            <td><a href="deleteEmployee/{{item.commandsLearnedByDog}}" class="btn btn-default"><i class="fa fa-trash"></i></a></td>

          </tr>
                    {% endfor %}
            {% endif %}
        </tr>
      </table>
      <form class="form" id="insertCommandsLearned" action="/commandsLearned" method="post">
        <h2>Input New Command Learned:</h2>
        <select name="commandID" required>
        <option value=""> Command </option>
        {% for command in commandData %}
          <option id="commandID" required name="commandID" value={{command['commandID']}}>{{command['commandName']}}</option>
          {% endfor %}
</select>
<select name="dogID" required>
  <option value=""> Dog Name </option>
        {% for dog in dogData %}
          <option name=dog['dogID']>{{dog['dogName']}}</option>
          {% endfor %}
</select>
        <button class="button" id=textButton id="Add CommandByDog" value="Add CommandByDog" name="Add CommandByDog">Submit</button>
      </form>
</body>
